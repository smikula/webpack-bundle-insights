{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "declaration": true,
        "sourceMap": false,
        "outDir": "lib",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "exclude": ["node_modules", "lib"],
    "include": ["src/**/*"]
}
